@Dialect=POSTGRESQL
CREATE TABLE users(
  userid     int8 PRIMARY KEY,
  name       text,
  age        int8
);

CREATE TABLE accounts(
  userid     int8 NOT NULL,
  accountid  int8 NOT NULL,
  balance    int8,
  PRIMARY KEY (userid, accountid)
) INTERLEAVE IN PARENT users ON DELETE CASCADE;

CREATE CHANGE STREAM stream1 FOR ALL WITH (
exclude_insert = true );

CREATE CHANGE STREAM stream2 FOR ALL WITH (
exclude_update = true );

CREATE CHANGE STREAM stream3 FOR ALL WITH (
exclude_delete = true );
